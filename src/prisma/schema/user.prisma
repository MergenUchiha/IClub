model User {
    id           String    @id() @default(uuid()) @db.Uuid
    firstName    String    @db.VarChar(30) @map("first_name")
    secondName   String    @db.VarChar(30) @map("second_name")
    isTeacher    Boolean   @db.Boolean @default(false) @map("is_teacher")
    phoneNumber  String    @unique @map("phone_number")
    studentId    String?   @db.VarChar(6) @map("student_id")
    department   String    @db.VarChar(255)  
    password     String    @db.VarChar()
    isBanned     Boolean   @db.Boolean @map("is_banned") @default(false)

    bookingDetails  Detail[]
    orders       Order[]
    createdAt    DateTime? @default(now()) @map("created_at") @db.Timestamp()
    updatedAt    DateTime? @updatedAt @map("updated_at") @db.Timestamp()
    token        Token?

    @@map("user")
}